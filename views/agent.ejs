<% if(agentData != null) { %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/exploreAgents">Explore Agents</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%- agentData.displayName %></li>
        </ol>
      </nav>

      <div class="row">
        <div class="col-12 col-md-4">
            <img src="<%- agentData.fullPortrait %>" class="img-fluid sticky-top" style="top: 20px; transform: scale(1.3); margin-top: 50px;" alt="<%- agentData.displayName %>" loading="lazy">
        </div>
        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12">
                    <h1><%- agentData.displayName %></h1>
                </div>
                <div class="col-12 mb-4" style="color: dimgray;"><%- agentData.role.displayName %></div>
                <div class="col-12" style="white-space: pre-line;">
                    <%- agentData.description %>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12">
                    <h5>Abilities</h5>
                </div>
                <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
                    <a href="#" class="col text-center category__link">
                        <div class="category__img shadow" style="background-color: black; height: 200px;">
                            <img src="<%- agentData.abilities[0].displayIcon %>" alt="<%- agentData.abilities[0].displayName %>" loading="lazy">
                        </div>
                        <div class="pt-1"><%- agentData.abilities[0].displayName %></div>
                    </a>
                    <a href="#" class="col text-center category__link">
                        <div class="category__img shadow" style="background-color: black; height: 200px;">
                            <img src="<%- agentData.abilities[1].displayIcon %>" alt="<%- agentData.abilities[1].displayName %>" loading="lazy">
                        </div>
                        <div class="pt-1"><%- agentData.abilities[1].displayName %></div>
                    </a>
                    <a href="#" class="col text-center category__link">
                        <div class="category__img shadow" style="background-color: black; height: 200px;">
                            <img src="<%- agentData.abilities[2].displayIcon %>" alt="<%- agentData.abilities[2].displayName %>" loading="lazy">
                        </div>
                        <div class="pt-1"><%- agentData.abilities[2].displayName %></div>
                    </a>
                    <a href="#" class="col text-center category__link">
                        <div class="category__img shadow" style="background-color: rgb(255, 1, 86); height: 200px;">
                            <img src="<%- agentData.abilities[3].displayIcon %>" alt="<%- agentData.abilities[3].displayName %>" loading="lazy">
                        </div>
                        <div class="pt-1"><%- agentData.abilities[3].displayName %></div>
                    </a>
                </div>
            </div>
        </div>
      </div>

<% } else { %>
    <p>No Items Found</p>
<% } %>
